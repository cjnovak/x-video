x-video input[type='range']
  -webkit-appearance none
  background rgba(107, 107, 107, 0.8)
  border-radius (elementSize / 10)
  border 1px solid rgba(235, 235, 235, 0.5)
  height (elementSize / 5)

// Firefox specific
x-video input[type='range']::-moz-range-track
  border none
  background transparent
  height (elementSize / 5)

x-video input[type='range']::-moz-range-progress
  border none
  background rgba(235, 235, 235, 0.5)
  height (elementSize / 5)

x-video input[type='range']::-moz-range-thumb
  border none
  background elementColor
  width round(elementSize / goldenRatio)
  height round(elementSize / goldenRatio)
  border-radius round(elementSize / goldenRatio / 2)

// Webkit specific
//x-video input[type='range']::-webkit-slider-container
x-video input[type='range']::-webkit-slider-runnable-track
  overflow hidden

x-video input[type='range']::-webkit-slider-thumb
  -webkit-appearance none
  background elementColor
  width round(elementSize / goldenRatio)
  height round(elementSize / goldenRatio)
  border-radius round(elementSize / goldenRatio / 2)
  position relative

x-video input[type='range']::-webkit-slider-thumb:after
  background rgba(235, 235, 235, 0.5)
  width maxWidth
  height (elementSize / 5) + 1
  top (elementSize / 5)
  right round(elementSize / goldenRatio)
  position absolute
  z-index 1
  content ""
